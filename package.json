{
  "name": "@vyft/root",
  "version": "0.0.0",
  "private": true,
  "description": "Vyft monorepo root - Infrastructure deployment made simple and accessible",
  "homepage": "https://github.com/vyftlabs/vyft#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/vyftlabs/vyft.git"
  },
  "bugs": {
    "url": "https://github.com/vyftlabs/vyft/issues"
  },
  "license": "AGPL-3.0",
  "author": "Vyft Community",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test -- --coverage",
    "lint": "pnpm -r lint",
    "format": "prettier \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --write",
    "format:check": "prettier \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\" --check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "typecheck": "pnpm -r typecheck",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --no-frozen-lockfile",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.19.23",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  }
}
